{
  "version": "1.5.0",
  "private": true,
  "keywords": [
    "vite",
    "vite-plugin",
    "windicss",
    "tailwindcss"
  ],
  "scripts": {
    "build": "cp README.md packages/vite-plugin-windicss && pnpm -r --filter ./packages run build",
    "dev": "pnpm -r --parallel --filter ./packages run dev",
    "example:build": "npm -C examples/vue run build",
    "example:dev": "npm -C examples/vue run dev",
    "lint": "eslint '**/*.{js,ts,vue,json}'",
    "lint:fix": "nr lint --fix",
    "publish:ci": "pnpm -r --filter ./packages publish --access public --no-git-checks",
    "release": "npx bumpp package.json packages/*/package.json --commit --tag --push",
    "test": "jest --runInBand",
    "test:examples": "pnpm -r --filter ./examples run build",
    "test:update": "jest --runInBand --u"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.10.0",
    "@antfu/ni": "^0.10.1",
    "@antfu/utils": "^0.3.0",
    "@types/connect": "^3.4.35",
    "@types/debug": "^4.1.7",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.0.2",
    "@types/micromatch": "^4.0.2",
    "@types/node": "^16.11.6",
    "@types/pug": "^2.0.5",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@windicss/config": "workspace:*",
    "@windicss/plugin-utils": "workspace:*",
    "bumpp": "^7.1.1",
    "debug": "^4.3.2",
    "eslint": "^8.1.0",
    "eslint-plugin-jest": "^25.2.3",
    "fast-glob": "^3.2.7",
    "fs-extra": "^10.0.0",
    "git-ensure": "^0.1.0",
    "jest": "^27.3.1",
    "magic-string": "^0.25.7",
    "pnpm": "^6.20.2",
    "rollup": "^2.59.0",
    "ts-jest": "^27.0.7",
    "tsup": "^5.6.0",
    "typescript": "^4.4.4",
    "vite": "^2.6.13",
    "vite-plugin-restart": "^0.0.2",
    "windicss": "^3.2.1"
  }
}
