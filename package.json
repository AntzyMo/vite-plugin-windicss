{
  "private": true,
  "version": "0.3.8",
  "keywords": [
    "vite",
    "vite-plugin",
    "windicss",
    "tailwindcss"
  ],
  "scripts": {
    "example:dev": "npm -C example run dev",
    "example:build": "npm -C example run build",
    "dev": "pnpm -r --filter ./packages run dev",
    "build": "cp README.md packages/vite-plugin-windicss && pnpm -r --filter ./packages run build",
    "publish": "pnpm -r --filter ./packages run publish",
    "release": "npx git-ensure -a && npx bumpp package.json packages/*/package.json --commit --tag --push",
    "test": "jest",
    "test:update": "jest --u"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.4.3",
    "@antfu/ni": "^0.5.4",
    "@types/debug": "^4.1.5",
    "@types/fs-extra": "^9.0.7",
    "@types/micromatch": "^4.0.1",
    "@types/node": "^14.14.30",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "bumpp": "^6.0.6",
    "debug": "^4.3.2",
    "eslint": "^7.20.0",
    "eslint-plugin-jest": "^24.1.5",
    "fast-glob": "^3.2.5",
    "fs-extra": "^9.1.0",
    "git-ensure": "^0.1.0",
    "jest": "^26.6.3",
    "pnpm": "^5.17.2",
    "rollup": "^2.39.0",
    "ts-jest": "^26.5.1",
    "tsup": "^4.0.0",
    "typescript": "^4.1.5",
    "vite": "^2.0.1"
  }
}
